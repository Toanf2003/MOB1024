//        list.remove(a);
//    }

    public void add() {

        String maSv = txtmasv.getText();
        String Ten = txthoten.getText();
        String diemTa = txtta.getText();
        String diemTH = txttinhoc.getText();
        String diemGDTC = txtgdtc.getText();
        String diemTB = txtdiemtb.getText();

        if (check()) {
            SinhVien sv = new SinhVien();
            for (SinhVien sinhVien : list) {
                if (sinhVien.getMaSv().equals(maSv)) {
                    JOptionPane.showMessageDialog(this, "Mã Sinh Viên Đã Tồn Tại", "LỖI", 2);
                    txtmasv.requestFocus();
                    return;
                }
            }
            sv.setTen(Ten);
            sv.setMaSv(maSv);
            sv.setDiemTA(Double.parseDouble(diemTa));
            sv.setDiemTH(Double.parseDouble(diemTH));
            sv.setDiemGDTC(Double.parseDouble(diemGDTC));
            list.add(sv);
//            txtdiemtb.setText(diemTB);
            txtdiemtb.setText(String.valueOf(sv.getDiemTb()));
            FillToTable();
        }
    }

    public boolean confirmDelete() {
        int choice = JOptionPane.showConfirmDialog(this, "Bạn có chắc muốn xóa?", "Xác nhận xóa", JOptionPane.YES_NO_OPTION);
        return choice == JOptionPane.YES_OPTION;
    }

    public boolean confirmUpdate() {
        int choice = JOptionPane.showConfirmDialog(this, "Bạn có chắc muốn Update?", "Xác nhận Update", JOptionPane.YES_NO_OPTION);
        return choice == JOptionPane.YES_OPTION;
    }

    public void xoa() {
        if (confirmDelete()) {
            int a = Table.getSelectedRow();
            list.remove(a);
        }
    }

    public void Tim() {
        DefaultTableModel model = (DefaultTableModel) Table.getModel();

        String timma = txttimmasv.getText();
        boolean tim = false;
        if (timma.isEmpty()) {
            JOptionPane.showMessageDialog(this, "Chưa Nhập Mã Sinh Viên Cần Tìm", "Thông Báo", 2);
            txttimmasv.requestFocus();

        }
        for (SinhVien sv : list) {
            if (sv.getMaSv().equals(timma)) {
                model.setRowCount(0);
                model.addRow(sv.toRow());
                show(sv);
                tim = true;
                break;
            }
        }
        if (tim==false) {
            JOptionPane.showMessageDialog(this, "Không Tìm Thấy", "Thông báo",2 );
        }
    }

    public void show(SinhVien sv) {
        txthoten.setText(sv.getTen());
        txtmasv.setText(sv.getMaSv());
        txtta.setText(String.valueOf(sv.diemTA));
        txttinhoc.setText(String.valueOf(sv.diemTH));
        txtgdtc.setText(String.valueOf(sv.diemGDTC));
        txtdiemtb.setText(String.valueOf(sv.getDiemTb()));
    }

    public void showclick() {
        int a = Table.getSelectedRow();
        SinhVien sv = list.get(a);
        show(sv);
    }

    public void update() {
        int up = Table.getSelectedRow();
        SinhVien sv = list.get(up);
        if (check()) {
            sv.setTen(txthoten.getText());
            sv.setMaSv(txtmasv.getText());
            sv.setDiemTA(Double.parseDouble(txtta.getText()));
            sv.setDiemTH(Double.parseDouble(txttinhoc.getText()));
            sv.setDiemGDTC(Double.parseDouble(txtgdtc.getText()));
        }
    }

