    private void btnnewActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        txttimmasv.setText(null);
        txtmasv.setText(null);
        txthoten.setText(null);
        txtta.setText(null);
        txttinhoc.setText(null);
        txtgdtc.setText(null);
        txtdiemtb.setText(null);
    }                                      

    private void btnupdateActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        if (Table.getRowCount() == 0) {
            JOptionPane.showMessageDialog(this, "Bảng đang trống.", "Thông báo", 2);
        } else {

            if (Table.getSelectedRow() == -1) {
                JOptionPane.showMessageDialog(this, "Vui Lòng Chọn Sinh Viên Cần Update.", "Thông báo", 2);
            } else {
                confirmUpdate();
                this.update();
                this.FillToTable();
            }
        }
    }                                         

    private void btndeleteActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        if (Table.getRowCount() == 0) {

            JOptionPane.showMessageDialog(this, "Bảng đang trống.", "Thông báo", 2);
        } else {
            if (Table.getSelectedRow() == -1) {
                JOptionPane.showMessageDialog(this, "Vui Lòng Chọn Sinh Viên Cần Xóa.", "Thông báo", 2);
            } else {
                this.xoa();
                this.FillToTable();
            }
        }

    }                                         

    private void TableMouseClicked(java.awt.event.MouseEvent evt) {                                   
        // TODO add your handling code here:
        count = Table.getSelectedRow();
        this.showclick();
    }                                  

    private void btnsaveActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        this.add();
        this.FillToTable();
    }                                       

    private void btnsearchActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:

        if (Table.getRowCount() == 0) {
            JOptionPane.showMessageDialog(this, "Bảng đang trống.", "Thông báo", 2);
        } else {
            this.Tim();
        }

    }                                         

